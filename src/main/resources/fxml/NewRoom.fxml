<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="container" alignment="CENTER" maxWidth="-Infinity" prefHeight="1080.0" prefWidth="1920.0"
      styleClass="background" stylesheets="@../css/Style.css" xmlns="http://javafx.com/javafx/"
      xmlns:fx="http://javafx.com/fxml/">
    <StackPane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
               prefHeight="120.0" prefWidth="1920.0">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="New Room" underline="true">
            <font>
                <Font size="35.0"/>
            </font>
        </Text>
    </StackPane>
    <StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0"
               prefWidth="1920.0" styleClass="WhiteBackground">
        <TextField fx:id="roomName" focusTraversable="false" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="300.0"
                   promptText="Insert room name"/>
    </StackPane>
    <HBox fx:id="expertBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
          minHeight="-Infinity" minWidth="-Infinity" prefHeight="120.0" prefWidth="1920.0" spacing="20.0"/>
    <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="120.0" prefWidth="1920.0" spacing="20.0">
        <Button fx:id="createNewGameButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0"
                styleClass="confirm-button" text="Create new game" textFill="WHITE">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Button fx:id="cancelButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0"
                styleClass="cancel-button" text="Cancel" textFill="WHITE">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
    </HBox>
</VBox>
