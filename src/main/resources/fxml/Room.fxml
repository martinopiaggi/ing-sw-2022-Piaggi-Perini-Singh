<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="1080.0" prefWidth="1920.0"
      styleClass="background" stylesheets="@../css/Style.css" xmlns="http://javafx.com/javafx/"
      xmlns:fx="http://javafx.com/fxml/">
    <StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="120.0"
               prefWidth="1920.0" styleClass="title">
        <Text fx:id="roomTitle" smooth="false" stroke="BLACK" strokeLineJoin="BEVEL" strokeMiterLimit="0.0"
              strokeWidth="0.0" styleClass="title" text="name" textAlignment="JUSTIFY" underline="true"
              StackPane.alignment="CENTER">
            <font>
                <Font name="Rockwell Extra Bold" size="40.0"/>
            </font>
        </Text>
        <VBox.margin>
            <Insets/>
        </VBox.margin>
    </StackPane>
    <FlowPane alignment="CENTER" columnHalignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
              minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="1920.0"
              styleClass="WhiteBackground">
        <GridPane fx:id="playersList" alignment="CENTER" gridLinesVisible="true" maxHeight="-Infinity"
                  maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="115.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="120.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="120.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="40.0" prefHeight="40.0" valignment="CENTER" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="NAME" GridPane.halignment="CENTER"
                  GridPane.valignment="CENTER"/>
            <Text layoutX="36.0" layoutY="35.0" strokeType="OUTSIDE" strokeWidth="0.0" text="TEAM"
                  textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                  GridPane.valignment="CENTER"/>
        </GridPane>
        <padding>
            <Insets bottom="40.0" top="40.0"/>
        </padding>
    </FlowPane>
    <HBox fx:id="expertBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
          minHeight="-Infinity" minWidth="-Infinity" prefHeight="120.0" prefWidth="1920.0" spacing="20.0">
    </HBox>
    <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="120.0" prefWidth="1920.0" spacing="20.0">
        <Button fx:id="startGameButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="100.0"
                styleClass="confirm-button" text="Start Game" textFill="WHITE">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Button fx:id="leaveButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="100.0"
                styleClass="cancel-button" text="Leave Room" textFill="WHITE">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
    </HBox>
</VBox>
